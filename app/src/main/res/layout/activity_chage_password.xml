<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TextView
        android:text="@string/label_password"
        android:layout_marginTop="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@android:color/black"
        android:id="@+id/labelPassword" />
    <EditText
        android:inputType="textPassword"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#0099FF"
        android:gravity="center"
        android:hint="@string/label_password"
        android:textColorHint="#cccccc"
        android:layout_below="@id/labelPassword"
        android:id="@+id/inputPassword" />
    <TextView
        android:text="@string/label_repeat_password"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@id/inputPassword"
        android:textColor="@android:color/black"
        android:id="@+id/labelRepeatPassword" />
    <EditText
        android:inputType="textPassword"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#0099FF"
        android:gravity="center"
        android:hint="@string/label_repeat_password"
        android:textColorHint="#cccccc"
        android:layout_below="@id/labelRepeatPassword"
        android:id="@+id/inputRepeatPassword" />
    <Button
        android:text="Change"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:background="@drawable/button_background"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:paddingLeft="25dip"
        android:paddingRight="25dip"
        android:id="@+id/buttonChangePassword" />
</LinearLayout>